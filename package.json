{
  "name": "media-deletion-helper",
  "version": "1.0.0",
  "description": "A helper application for managing and deleting media files",
  "author": "Your Name",
  "main": "./main.js",
  "scripts": {
    "start": "electron .",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "ffprobe-static": "^3.1.0",
    "image-size": "^1.1.1"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "media-deletion-helper",
    "productName": "Media Deletion Helper",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "trashcan.png",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffprobe-static/bin/${platform}/${arch}",
        "to": "ffprobe-static",
        "filter": ["ffprobe*"]
      }
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "trashcan.png"
    }
  }
}
